<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainProgramStructure.MainGUIController">
    <VBox fx:id="MainPane">
        <Label text="PLY Sequence file generator (.plys)" />
        <HBox>
            <Button fx:id="select" onMouseClicked="#selectDirectory" text="Select Directory with PLY Files" />
            <Button fx:id="generate" onMouseClicked="#generatePLYS" text="Generate .plys" />
            <Button fx:id="save" onMouseClicked="#saveFile" text="Save .plys" />
        </HBox>
        <ProgressBar fx:id="progressBar" prefHeight="30.0" prefWidth="400.0" />
    </VBox>
    <stylesheets>
        <URL value="@MainGUI.css" />
    </stylesheets>
</AnchorPane>
